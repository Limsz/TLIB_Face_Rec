<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".facedetector.SuccessActivity">

    <!-- Success Icon -->

    <!-- Success Message -->
    <TextView
        android:id="@+id/success_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="216dp"
        android:fontFamily="sans-serif-medium"
        android:text="Successfully Detected!"
        android:textColorHint="#262525"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Scan Again Button -->

    <!-- Exit Button -->

    <Button
        android:id="@+id/btn_scan_again"
        android:layout_width="257dp"
        android:layout_height="64dp"
        android:layout_marginTop="236dp"
        android:backgroundTint="#0060AD"
        android:text="Detect another face"
        android:textColor="@android:color/white"
        app:cornerRadius="75px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/success_text" />

    <Button
        android:id="@+id/btn_exit"
        android:layout_width="257dp"
        android:layout_height="67dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#0060AD"
        android:text="Exit"
        android:textColor="@android:color/white"
        app:cornerRadius="75px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_scan_again" />
</androidx.constraintlayout.widget.ConstraintLayout>
